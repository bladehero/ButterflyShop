@model FleaMarket.Web.Models.HomeModels.IndexVM
@using static FleaMarket.Web.Extensions.ImagePathExtension
@{
    var brands = Model.Brands;
    var randomBrands = Model.RandomBrands;
    var newItems = Model.NewItems;
    var saleItems = Model.SaleItems;
}

<!--Slider Section Start-->
<div class="hero-section section position-relative">
    <div class="hero-slider section">
        <!--Hero Item start-->
        <div class="hero-item bg-image" data-bg="assets/images/banners/bg-0.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="col-12">
                            <!--Hero Content start-->
                            <div class="hero-content-2 right">
                                <h2 class="text-white">Бесконечность героев!</h2>
                                <a href="@Url.Action("Index", "Shop")" class="btn">НАЙТИ</a>
                            </div>
                            <!--Hero Content end-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Hero Item end-->
        <!--Hero Item start-->
        <div class="hero-item bg-image" data-bg="assets/images/banners/bg-1.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="col-12">
                            <!--Hero Content start-->
                            <div class="hero-content-2 left">
                                <h2>Точные<br />копии фигурок</h2>
                                <a style="color:black !important;background-color:white !important;" href="@Url.Action("Index", "Shop")" class="btn">НАЙТИ</a>
                            </div>
                            <!--Hero Content end-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Hero Item end-->
        <!--Hero Item start-->
        <div class="hero-item bg-image" data-bg="assets/images/banners/bg-2.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!--Hero Content start-->
                        <div class="hero-content-2 center" style="margin-top: 100px;">
                            <div style="background-color: #d32f2f;">
                                <h2 style="color: black; -webkit-text-fill-color: white; -webkit-text-stroke-width: 1px;-webkit-text-stroke-color: transparent;">Множество комиксов</h2>
                            </div>
                            <a href="@Url.Action("Index", "Shop")" class="btn">НАЙТИ</a>
                        </div>
                        <!--Hero Content end-->
                    </div>
                </div>
            </div>
        </div>
        <!--Hero Item end-->
    </div>
</div>
<!--Slider Section end-->

<!--Brand section start-->
<div class="brand-section section pb-100 pb-lg-80 pb-md-70 pb-sm-60 pb-xs-50 pt-30 pt-lg-15 pt-md-0 pt-sm-0 pt-xs-15">
    <div class="container text-center">
        <div class="section-title text-center mb-15">
            <h2>Вселенные</h2>
        </div>
        <div class="row">
            <div class="brand-slider section">
                @foreach (var brand in brands)
                {
                    <!-- Single Brand Start -->
                    <div class="col">
                        <div class="single-brand">
                            <div class="brand-image">
                                <a href="@Url.Action("Index", "Shop", new { brandId = brand.Id})"><img src="~/@BrandLogoImage(brand.Logo)" alt="@brand.Name"></a>
                            </div>
                        </div>
                    </div>
                    <!-- Single Brand End -->
                }
            </div>
        </div>
    </div>
</div>
<!--Brand section end-->

<!--Product section start-->
<div class="product-section section pt-100 pt-lg-80 pt-md-70 pt-sm-60 pt-xs-50 pb-55 pb-lg-35 pb-md-25 pb-sm-15 pb-xs-5">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section-title text-center mb-50 mb-xs-20">
                    <h2>Новинки</h2>
                </div>
            </div>
        </div>
        <div class="row @(newItems?.Count() > 4 ? "product-slider" : "justify-content-center")">
            @foreach (var product in newItems)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    @await Html.PartialAsync("~/Views/Shared/_ProductCard.cshtml", product)
                </div>
            }
        </div>
    </div>
</div>
<div class="product-section section">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section-title text-center mb-50 mb-xs-20">
                    <h2>Распродажа</h2>
                </div>
            </div>
        </div>
        <div class="row @(saleItems?.Count() > 4 ? "product-slider" : "justify-content-center")">
            @foreach (var product in saleItems)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    @await Html.PartialAsync("~/Views/Shared/_ProductCard.cshtml", product)
                </div>
            }
        </div>
    </div>
</div>
<!--Product section end-->