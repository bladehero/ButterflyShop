                            <!--Hero Content start-->
                            <div class="hero-content-2 center">
                                <h2>Экологически чистая <br> косметика</h2>
                                <a href="@Url.Action("Index", "Shop")" class="btn">НАЙТИ</a>
                            </div>
                            <!--Hero Content end-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Hero Item end-->
        <!--Hero Item start-->
        <div class="hero-item bg-image" data-bg="assets/images/banners/bg-2.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!--Hero Content start-->
                        <div class="hero-content-2 right">
                            <h2 class="text-white">Разнообразие брендов <br> в твоих руках</h2>
                            <a href="@Url.Action("Index", "Shop")" class="btn">НАЙТИ</a>
                        </div>
                        <!--Hero Content end-->
                    </div>
                </div>
            </div>
        </div>
        <!--Hero Item end-->
    </div>
</div>
