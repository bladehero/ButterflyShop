@model ButterflyShop.Web.Areas.Admin.Models.ProductsModel.IndexVM

<div class="input-group my-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon">Поиск</span>
    </div>
    <input type="text" class="form-control" placeholder="Начните вводить для поиска..." aria-describedby="basic-addon">
</div>
<div class="table-responsive">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Товар</th>
                <th scope="col">Бренд</th>
                <th scope="col">Категории</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Products?.Count() > 0)
            {
                @foreach (var product in Model.Products)
                {
                    <tr class="product-row pointer" data-product-id="@product.ProductId">
                        <th scope="row">@product.ProductId</th>
                        <td>@product.ProductName</td>
                        <td>@product.BrandName</td>
                        <td>@product.Categories</td>
                        <td><i class="pointer fa fa-trash-alt text-danger"></i></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        $('.product-row').click(function () {
            var id = $(this).data('product-id');
            window.location.replace('@Url.Action("Index", "Products", new { area = "Admin" })?id=' + id);
        });
        //window.location.replace('@Url.Action("Index", "Products", new { area = "Admin" })?search=' + 'Крем');
    });
</script>
}